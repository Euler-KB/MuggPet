<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <PreferenceCategory android:title="Application wide settings">

        <CheckBoxPreference
            android:defaultValue="false"
            android:key="EnableToasts"
            android:summary="Enables ordisables toasting of messages "
            android:title="Enable toasts" />
        <CheckBoxPreference
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:defaultValue="false"
            android:key="EnableNotifications"
            android:summary="Shows or disables toast notifications"
            android:title="Enable Notifications" />
        <SwitchPreference
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:defaultValue="false"
            android:key="AutoReplyMessages"
            android:summary="Automatically replies to messages"
            android:title="Auto reply messages" />
    </PreferenceCategory>
</PreferenceScreen>